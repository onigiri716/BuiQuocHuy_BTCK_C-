<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Trang Quản Lý</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/Adminhtml/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Tempusdominus Bootstrap 4 -->
  <link rel="stylesheet" href="~/Adminhtml/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
  <!-- iCheck -->
  <link rel="stylesheet" href="~/Adminhtml/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- JQVMap -->
  <link rel="stylesheet" href="~/Adminhtml/plugins/jqvmap/jqvmap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/Adminhtml/dist/css/adminlte.min.css">
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="~/Adminhtml/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
  <!-- Daterange picker -->
  <link rel="stylesheet" href="~/Adminhtml/plugins/daterangepicker/daterangepicker.css">
  <!-- summernote -->
    <link rel="stylesheet" href="~/Adminhtml/plugins/summernote/summernote-bs4.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Adminhtml/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Adminhtml/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Adminhtml/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/Adminhtml/dist/img/Blue_Archive_logo.svg.png" alt="AdminLTELogo" height="100" width="300">
  </div>

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Liên hệ</a>
      </li>
    </ul>

    
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/Adminhtml/dist/img/Blue_Archive_logo.svg.png" alt="Company Logo" class="brand-image" style="opacity: .8">
                <span class="brand-text font-weight-light"><b>Blue Archive</b></span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
                        <img src="~/Adminhtml/dist/img/Screenshot 2024-05-20 221653.png" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a href="#" class="d-block">Bùi Quốc Huy</a>
        </div>
      </div>

    

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          
                        <li class="nav-item">
                            <a asp-controller="NhanViens" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Quản lý nhân viên
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ThongBaos" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Quản lý thông báo
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="TheLoais" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Quản lý thể loại
                                </p>
                            </a>
                        </li>

          
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
                    @RenderBody()
        
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <strong>Copyright &copy; @DateTime.Now.Year <a href="">Bùi Quốc Huy</a>.</strong>
    All rights reserved.
    <div class="float-right d-none d-sm-inline-block">

    </div>
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<!-- jQuery -->
<script src="~/Adminhtml/plugins/jquery/jquery.min.js"></script>
<!-- jQuery UI 1.11.4 -->
<script src="~/Adminhtml/plugins/jquery-ui/jquery-ui.min.js"></script>
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
  $.widget.bridge('uibutton', $.ui.button)
</script>
<!-- Bootstrap 4 -->
    <script src="~/Adminhtml/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- ChartJS -->
    <script src="~/Adminhtml/plugins/chart.js/Chart.min.js"></script>
<!-- Sparkline -->
    <script src="~/Adminhtml/plugins/sparklines/sparkline.js"></script>
<!-- JQVMap -->
    <script src="~/Adminhtml/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Adminhtml/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
<!-- jQuery Knob Chart -->
    <script src="~/Adminhtml/plugins/jquery-knob/jquery.knob.min.js"></script>
<!-- daterangepicker -->
    <script src="~/Adminhtml/plugins/moment/moment.min.js"></script>
    <script src="~/Adminhtml/plugins/daterangepicker/daterangepicker.js"></script>
<!-- Tempusdominus Bootstrap 4 -->
    <script src="~/Adminhtml/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
<!-- Summernote -->
    <script src="~/Adminhtml/plugins/summernote/summernote-bs4.min.js"></script>
<!-- overlayScrollbars -->
    <script src="~/Adminhtml/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
<!-- AdminLTE App -->
    <script src="~/Adminhtml/dist/js/adminlte.js"></script>
<!-- AdminLTE for demo purposes -->
    <script src="~/Adminhtml/dist/js/demo.js"></script>
<!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/Adminhtml/dist/js/pages/dashboard.js"></script>
    <!-- DataTables  & Plugins -->

    <!-- <script src="~/Adminhtml/plugins/datatables/jquery.dataTables.min.js"></script> -->
    <script src="~/Adminhtml/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Adminhtml/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Adminhtml/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Adminhtml/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Adminhtml/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Adminhtml/plugins/jszip/jszip.min.js"></script>
    <script src="~/Adminhtml/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/Adminhtml/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/Adminhtml/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Adminhtml/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Adminhtml/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
























